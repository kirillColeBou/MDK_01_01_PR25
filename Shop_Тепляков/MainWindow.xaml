<Window x:Class="Shop_Тепляков.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop_Тепляков"
        mc:Ignorable="d"
           Title="Магазин" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <TextBox x:Name="search" Width="220" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" ToolTip="Поле поиска"/>
        <Button Click="searchItem" Content="Найти" Margin="240,10,0,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="140"/>
        <TextBox x:Name="discount" Width="220" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="390,10,0,0" ToolTip="Поле ввода скидки"/>
        <Button Click="discountItem" Content="Скидка" Margin="620,10,0,0" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="140"/>
        <Grid Margin="0,45,0,0">
            <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Hidden">
                <StackPanel x:Name="parent" Orientation="Horizontal">

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
